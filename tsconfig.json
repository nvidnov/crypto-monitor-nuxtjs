{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "types": ["nuxt", "node"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "DOM"],

    "baseUrl": ".",                    // ← ОБЯЗАТЕЛЬНО
    "paths": {                         // ← Самое важное для автокомплита
      "~/*": ["src/*"],
      "@/*": ["src/*"],

      "@shared/*": ["src/shared/*"],
      "@entities/*": ["src/entities/*"],
      "@features/*": ["src/features/*"],
      "@widgets/*": ["src/widgets/*"],
      "@pages/*": ["src/pages/*"],
      "@stores/*": ["src/stores/*"]
    }
  }
}
